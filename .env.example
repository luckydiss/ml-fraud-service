# =============================================================================
# Credit Fraud ML Service - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
APP_NAME=ml-fraud-service
APP_ENV=development
DEBUG=true

# -----------------------------------------------------------------------------
# Paths
# -----------------------------------------------------------------------------
MODEL_REGISTRY_PATH=./model_registry
DATA_PATH=./data

# -----------------------------------------------------------------------------
# Inference Service
# -----------------------------------------------------------------------------
INFERENCE_HOST=0.0.0.0
INFERENCE_PORT=8000

# -----------------------------------------------------------------------------
# Model Settings
# -----------------------------------------------------------------------------
# Default threshold for fraud classification (from existing code)
OPTIMAL_THRESHOLD=0.251

# -----------------------------------------------------------------------------
# Training Quality Gates
# -----------------------------------------------------------------------------
MIN_PRECISION=0.80
MIN_RECALL=0.70
MIN_F1=0.75

# -----------------------------------------------------------------------------
# LightGBM Hyperparameters
# -----------------------------------------------------------------------------
LGBM_LEARNING_RATE=0.05
LGBM_MAX_DEPTH=5
LGBM_MIN_CHILD_SAMPLES=20
LGBM_N_ESTIMATORS=200
LGBM_NUM_LEAVES=31
LGBM_RANDOM_STATE=42

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
